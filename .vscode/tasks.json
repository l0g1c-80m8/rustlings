{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Rust: Build and Run Current File",
      "type": "shell",
      "command": "rustc",
      "args": [
        "${file}",
        "-o",
        "${workspaceFolder}/target/current_file",
        "&&",
        "${workspaceFolder}/target/current_file"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Git: Commit Exercise Solution",
      "type": "shell",
      "command": "git",
      "args": [
        "add",
        "${file}",
        "&&",
        "git",
        "commit",
        "-m",
        "chore: solve exercise [${relativeFile}]"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Rust: Build and Run Tests",
      "type": "shell",
      "command": "rustc",
      "args": [
        "--test",
        "${file}",
        "-o",
        "${workspaceFolder}/target/current_test",
        "&&",
        "${workspaceFolder}/target/current_test"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
